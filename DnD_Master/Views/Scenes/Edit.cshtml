@model DnD_Master.Models.Scene

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Scene</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SceneId" />
            <div class="form-group">
                <label asp-for="SceneName" class="control-label"></label>
                <input asp-for="SceneName" class="form-control" />
                <span asp-validation-for="SceneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant" class="control-label"></label>
                <input type="text" asp-for="Participant" class="form-control" id="participantInput" autocomplete="off" />
                <ul id="suggestions" class="list-group" style="display:none;"></ul>
                <span asp-validation-for="Participant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    // При вводе нового символа обращается к базе на наличие совпадений и предлагает их в выпадающем списке
    $(document).ready(function () {
        $('#participantInput').on('input', function () {
            var query = $(this).val();
            if (query.length > 0) {
                $.ajax({
                    url: '@Url.Action("SearchParticipants", "Scenes")',
                    type: 'GET',
                    data: { searchTerm: query },
                    success: function (data) {
                        $('#suggestions').empty();
                        if (data.length > 0) {
                            $.each(data, function (index, participant) {
                                $('#suggestions').append($('<li class="list-group-item">').text(participant.name));
                            });
                            $('#suggestions').show();
                        } else {
                            $('#suggestions').hide();
                        }
                    },
                    error: function () {
                        alert('Error fetching participants');
                    }
                });
            } else {
                $('#suggestions').hide();
            }
        });

        // Убирает список если кликнуть вне выпадающего списка
        $(document).on('click', function (e) {
            if (!$(e.target).closest('#participantInput').length) {
                $('#suggestions').hide();
            }
        });

        // Заполняет строку выброшенным значением при клике на него
        $(document).on('click', '.list-group-item', function () {
            $('#participantInput').val($(this).text());
            $('#suggestions').hide();
        });

        // // Подсветка элемента списка при наведении
        // $(document).on('mouseenter', '.list-group-item', function () {
        //     $(this).addClass('highlight');
        // }).on('mouseleave', '.list-group-item', function () {
        //     $(this).removeClass('highlight');
        // });
    });
</script>
