@model DnD_Master.Models.Scene

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Scene</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SceneName" class="control-label"></label>
                <input asp-for="SceneName" class="form-control" />
                <span asp-validation-for="SceneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant" class="control-label"></label>
                <input type="text" asp-for="Participant" class="form-control" id="searchInput" autocomplete="off" />
                    <ul id="suggestions" class="list-group" style="display:none;"></ul>
                <span asp-validation-for="Participant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

